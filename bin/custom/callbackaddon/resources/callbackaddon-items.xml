<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:noNamespaceSchemaLocation="items.xsd">
	<collectiontypes>
		<collectiontype code="CallbackStatusSet" elementtype="CallbackStatusEnum"
						autocreate="true" generate="true" type="set" />
	</collectiontypes>


	<enumtypes>
		<enumtype generate="true" code="CallbackStatusEnum" autocreate="true"
				  dynamic="true">
			<value code="UNPROCESSED" />
			<value code="PROCESSED" />
			<value code="UNREACHABLE" />

		</enumtype>

	</enumtypes>

	<itemtypes>
		<itemtype code="CallbackComponent" extends="SimpleCMSComponent" generate="true" autocreate="true" abstract="false"
				  jaloclass="com.reply.tyreshop.addons.callback.jalo.CallbackComponent">
			<description>Callback Form</description>
			<attributes>
				<attribute type="localized:java.lang.String" qualifier="headText">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="customerName">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="inputName">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="customerPhone">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="comment">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="inputComment">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="confirmB">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="closeB">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="openB">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
				<attribute type="localized:java.lang.String" qualifier="confirmationText">
					<modifiers read="true" write="true" optional="true" />
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>

		<typegroup name="Callback">
			<itemtype code="Callback" extends="GenericItem" autocreate="true" generate="true">
				<deployment table="Callback" typecode="10300"/>
				<attributes>
					<attribute qualifier="name" type="java.lang.String">
						<modifiers read="true" write="true" optional="true" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="phone" type="java.lang.String">
						<modifiers read="true" write="true" optional="true" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="comment" type="java.lang.String">
						<modifiers read="true" write="true" optional="false" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="status" type="CallbackStatusSet">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>
